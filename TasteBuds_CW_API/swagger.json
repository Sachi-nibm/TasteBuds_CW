    "paths": {
        "/api/users": {
            "get": {
              "tags": ["User Details"],
              "summary": "Get all users details in TasteBuds application",
              "responses": {
                "200": {
                  "description": "OK (All user Details).",
                  "schema": {
                    "$ref": "#/definitions/User"
                  }
                },
                "500": {
                  "description": "ERROR"
                }
              }
            },
            "post": {
                "tags": ["User Details"],
                "summary": "Create new user for TasteBuds application",
                "parameters": [
                  {
                    "name": "User Register",
                    "in": "body",
                    "description": "User Register Details",
                    "schema": {
                      "$ref": "#/definitions/User"
                    }
                  }
                ],
                "produces": ["application/json"],
                "responses": {
                  "200": {
                    "description": "OK (Successfully insert the user).",
                    "schema": {
                      "$ref": "#/definitions/User"
                    }
                  },
                  "500": {
                    "description": "ERROR"
                  }
                }
              }
          },
          "/api/users/{id}": {
            "parameters": [
              {
                "name": "id",
                "in": "path",
                "required": true,
                "description": "ID of user that we want to find",
                "type": "string"
              }
            ],
            "get": {
              "tags": ["User Details"],
              "summary": "Get User details in TasteBuds application",
              "parameters": [
                {
                  "name": "id",
                  "in": "path",
                  "required": true,
                  "type": "string"
                }
              ],
              "responses": {
                "200": {
                  "description": "OK (User details)."
                },
                "500": {
                  "description": "ERROR"
                }
              }
            },
            "delete": {
                "tags": ["User Details"],
                "summary": "Delete users in TasteBuds application",
                "parameters": [
                  {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "type": "string"
                  }
                ],
                "responses": {
                  "200": {
                    "description": "OK (Successfully deleted the user)."
                  },
                  "500": {
                    "description": "ERROR"
                  }
                }
              }
          }
          , "/api/orders": {
